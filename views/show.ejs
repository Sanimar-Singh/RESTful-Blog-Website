<%-include("partials/header") %>
	
	<div class="ui main text container segment">
		<div class="ui huge centered header"><%=blog.title%></div>
		<div class="ui top attached">
			<div class="item">
				<img class="ui centered rounded image" src="<%=blog.image%>">
				<div class="content"><strong><span><%=blog.created.toDateString()%></span></strong></div>
				<br>
				<div class="description">
					<p><%- blog.body %></p>
				</div>
				<br>
				<a class="ui blue basic button" href="/blogs/<%=blog._id%>/edit">Edit</a>
				<form id="deleteform" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
					<button class="ui red basic button">Delete</button>
				</form>
			</div>
			
		</div>
	
	</div>


<%-include("partials/footer") %>